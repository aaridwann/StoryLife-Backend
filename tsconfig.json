{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
      "outDir": "compile",
      "lib": ["es2021"],
      "module": "commonjs",
      "target": "es2021",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    },
    "exclude": ["node_modules", "src/**/*.spec.ts", "./test/"]
  }